<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
  <servlet>
    <servlet-name>params</servlet-name>
    <servlet-class>
      com.oaklandsw.http.servlet.ParamServlet
    </servlet-class>
  </servlet>

  <!--  uses JCIFS/NTLMv2 servlet filter below - level 5 -->
  <servlet-mapping>
    <servlet-name>params</servlet-name>
    <url-pattern>/ntlm2params5</url-pattern>
  </servlet-mapping>

	<!-- NTLMv2 -->

	<!-- NTLMv2 - level 5 - no domain controller -->
  <filter>
    <filter-name>Ntlm2HttpFilter5</filter-name>
    <filter-class>com.oaklandsw.http.servlet.NtlmHttpFilter</filter-class>
    <init-param>
      <param-name>jcifs.http.domainController</param-name>
      <param-value>192.168.1.20</param-value>
    </init-param>
    <init-param>
      <param-name>jcifs.smb.client.server</param-name>
      <param-value>repoman</param-value>
    </init-param>
    <init-param>
      <param-name>jcifs.smb.client.soTimeout</param-name>
      <param-value>5000</param-value>
    </init-param>
    <init-param>
      <param-name>jcifs.util.loglevel</param-name>
    <!--  6 is full detail logging -->
      <param-value>6</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>Ntlm2HttpFilter5</filter-name>
    <url-pattern>/ntlm2params5</url-pattern>
  </filter-mapping>


</web-app>
