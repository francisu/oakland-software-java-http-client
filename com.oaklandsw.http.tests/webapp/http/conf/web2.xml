<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
  <servlet>
    <servlet-name>params</servlet-name>
    <servlet-class>
      com.oaklandsw.http.servlet.ParamServlet
    </servlet-class>
  </servlet>

  <!--  uses JCIFS/NTLMv2 servlet filter below - level 0 -->
  <servlet-mapping>
    <servlet-name>params</servlet-name>
    <url-pattern>/ntlm2params0</url-pattern>
  </servlet-mapping>

	<!-- NTLMv2 -->

	<!-- NTLMv2 - level 0 -->
  <filter>
    <filter-name>Ntlm2HttpFilter0</filter-name>
    <filter-class>com.oaklandsw.http.servlet.NtlmHttpFilter</filter-class>
    <init-param>
      <param-name>jcifs.http.domainController</param-name>
      <param-value>192.168.1.27</param-value>
    </init-param>
    <init-param>
      <param-name>jcifs.smb.client.domain</param-name>
      <param-value>oaklandswtest.com</param-value>
    </init-param>
    <init-param>
      <param-name>jcifs.netbios.wins</param-name>
      <param-value>win2k3-2</param-value>
    </init-param>
    <init-param>
      <param-name>jcifs.smb.client.soTimeout</param-name>
      <param-value>5000</param-value>
    </init-param>
    <init-param>
      <param-name>jcifs.smb.lmCompatibility</param-name>
      <param-value>0</param-value>
    </init-param>
    <init-param>
      <param-name>jcifs.util.loglevel</param-name>
    <!--  6 is full detail logging -->
      <param-value>6</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>Ntlm2HttpFilter0</filter-name>
    <url-pattern>/ntlm2params0</url-pattern>
  </filter-mapping>


</web-app>
